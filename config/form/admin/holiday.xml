<?xml version="1.0" encoding="UTF-8"?>
<form>
	<hiddenFields>
		<field name="id" />
	</hiddenFields>
	<fieldsets>

		<fieldset name="main">
			<legend>Main data of a holiday</legend>
			<elements>

				<field type="textinput" name="title">
					<label>core.title</label>
					<required/>
				</field>

				<field type="date" name="date">
					<label>date.date</label>
					<required/>
				</field>

				<field type="textarea" name="description">
					<label>core.description</label>
				</field>

				<field type="duration" name="workingtime">
					<label>calendar.holiday.attr.workingtime</label>
				</field>

				<field type="databaseRelation" name="holidayset">
					<label>calendar.holiday.attr.holidayset</label>
					<addLabel>calendar.holiday.attr.holidayset.new</addLabel>
					<record>
						<form>ext/calendar/config/form/admin/holiday-holidayset.xml</form>
						<url>
							<ext>calendar</ext>
							<controller>records</controller>
						</url>
						<label type="field">
							<field>title</field>
							<noLabel>calendar.holiday.attr.holidayset.new</noLabel>
						</label>
					</record>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>