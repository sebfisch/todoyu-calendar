<?xml version="1.0" encoding="UTF-8"?>
<form>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>

		<fieldset name="main">
			<legend>Main data of a holiday</legend>
			<elements>

				<field type="textinput" name="title">
					<label>LLL:core.title</label>
					<required>1</required>
				</field>

				<field type="dateinput" name="date">
					<label>LLL:date.date</label>
					<required>1</required>
				</field>

				<field type="textarea" name="description">
					<label>LLL:core.description</label>
				</field>

				<field type="select" name="workinghours">
					<label>LLL:calendar.holiday.attr.workinghours</label>
					<source type="function">
						<function>TodoyuCalendarViewHelper::getWorkingHoursOptions</function>
					</source>
				</field>

				<field type="databaseRelation" name="holidayset">
					<label>LLL:calendar.holiday.attr.holidayset</label>
					<foreignRecordConf>
						<foreignformxml>ext/calendar/config/form/admin/holiday-holidayset.xml</foreignformxml>
						<addSubformConfig>
							<ext>calendar</ext>
							<controller>formhandling</controller>
						</addSubformConfig>
						<label type="field">
							<field>title</field>
							<noLabel>Neues Feiertagsset</noLabel>
						</label>
					</foreignRecordConf>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>