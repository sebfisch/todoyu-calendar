<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">holidayset</attribute>
		<attribute name="action">?ext=sysmanager&amp;controller=records</attribute>
		<attribute name="onsubmit">Todoyu.Ext.sysmanager.Extensions.Records.saveRecord(this); return false;</attribute>
	</attributes>
	<hiddenFields>
		<field name="id"></field>
	</hiddenFields>
	<fieldsets>

		<fieldset name="main">
			<legend>Main data of a holidayset</legend>
			<elements>

				<field type="textinput" name="title">
					<label>calendar.holidayset.attr.name</label>
					<required>1</required>
				</field>

				<field type="textarea" name="description">
					<label>core.description</label>
				</field>

				<field type="button" name="expandall">
					<type>button</type>
					<text>LLL:core.expandall</text>
					<onclick>Todoyu.Form.expandAllForeignRecords(this.id);</onclick>
					<class></class>
				</field>

				<field type="databaseRelation" name="holiday">
					<label>calendar.holidayset.attr.holiday</label>
					<foreignRecordConf>
						<foreignformxml>ext/calendar/config/form/admin/holidayset-holiday.xml</foreignformxml>
						<addSubformConfig>
							<ext>calendar</ext>
							<controller>records</controller>
						</addSubformConfig>
						<label type="field">
							<field>title</field>
							<noLabel>Neuer Feiertag</noLabel>
						</label>
					</foreignRecordConf>
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>