<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="name">config</attribute>
	</attributes>
	<fieldsets>

		<fieldset name="config">
			<elements>
				<field type="checkbox" name="allowoverbooking">
					<label>calendar.ext.extconf.allowoverbooking.label</label>
				</field>

		</elements>
		</fieldset>

		<fieldset name="eventsreminder">
			<elements>
				<field type="select" name="reminderpopup_roles">
					<label>calendar.ext.extconf.reminderpopup_roles.label</label>
					<source type="function">
						<function>TodoyuRoleViewHelper::getRoleOptions</function>
						<lazyInit/>
					</source>
					<size>6</size>
					<multiple>1</multiple>
				</field>

				<field type="duration" name="reminderpopup_advancetime">
					<label>calendar.ext.extconf.reminderpopup_advancetime.label</label>
				</field>

				<field type="checkbox" name="audioreminder_active">
					<label>calendar.ext.extconf.audioreminder_active.label</label>
				</field>

			</elements>
		</fieldset>

		<fieldset name="eventsmailing">
			<elements>
			<field type="select" name="autosendeventmail">
					<label>calendar.ext.extconf.autosendeventmail.label</label>
					<source type="function">
						<function>TodoyuRoleViewHelper::getRoleOptions</function>
						<lazyInit/>
					</source>
					<multiple />
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>