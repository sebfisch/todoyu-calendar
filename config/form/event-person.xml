		<fieldset name="main">
			<legend>Event Persons</legend>
			<elements>

				<field type="textinputAC" name="id">
					<label>event.attr.assigned_to</label>
					<config>
						<acListener>
							<ext>calendar</ext>
							<controller>autocompletion</controller>
							<action>person</action>
						</acListener>
						<acLabelFunc>TodoyuPersonManager::getLabel</acLabelFunc>
						<options>
							<onCompleteCustom>Todoyu.Ext.calendar.EventEdit.onPersonAssignmentAutocomplete</onCompleteCustom>
						</options>
					</config>
					<required />
				</field>

			</elements>
		</fieldset>

	</fieldsets>
</form>