<?xml version="1.0" encoding="UTF-8"?>
<form>
	<attributes>
		<attribute name="action">?ext=calendar&amp;controller=profile</attribute>
		<attribute name="name">share</attribute>
		<attribute name="onsubmit">return false</attribute>
	</attributes>
	<hiddenFields>
		<field name="is_tokenpersonal_changed" />
		<field name="is_tokenfreebusy_changed" />
	</hiddenFields>
	<fieldsets>

		<fieldset name="personal">
			<legend>Token for accessing your full personal calendar data</legend>
			<elements>
				<field type="comment" name="tokenpersonal">
					<label>calendar.ext.share.token.personal.label</label>
					<comment>LLL:calendar.ext.share.token.noneyet</comment>
					<class>tokentext</class>
				</field>
				<field type="button" name="generatetokenpersonal">
					<text>calendar.ext.share.button.generatetoken</text>
					<class>generate</class>
					<onclick>Todoyu.Ext.calendar.Profile.generateToken(Todoyu.Ext.calendar.Share.tokenIDs.personal, this.id)</onclick>
					<hasIcon/>
				</field>
			</elements>
		</fieldset>

		<fieldset name="freebusy">
			<legend>Token for accessing your summarized availability (free/busy time w/o details)</legend>
			<elements>
				<field type="comment" name="tokenfreebusy">
					<label>calendar.ext.share.token.freebusy.label</label>
					<comment>LLL:calendar.ext.share.token.noneyet</comment>
					<class>tokentext</class>
				</field>
				<field type="button" name="generatetokenfreebusy">
					<text>calendar.ext.share.button.generatetoken</text>
					<class>generate</class>
					<onclick>Todoyu.Ext.calendar.Profile.generateToken(Todoyu.Ext.calendar.Share.tokenIDs.freebusy, this.id)</onclick>
					<hasIcon/>
				</field>
			</elements>
		</fieldset>

		<fieldset name="buttons">
			<legend>Actions</legend>
			<class>buttons</class>
			<elements>
				<field type="saveButton" name="save">
					<onclick>Todoyu.Ext.calendar.Profile.saveSharingTokens(this.form)</onclick>
				</field>
			</elements>
		</fieldset>

	</fieldsets>
</form>