<div id="calendar" {if ! $showCalendar}style="display:none"{/if}>

	{* ----------------- Calendar header ----------------- *}
	<h1 id="calendar-header" class="headerLine">
		<span id="calendar-title"></span>
		<span id="calendar-quicknav">
			<span id="calendar-quicknav-backward" title="{Label calendar.quicknav.backward.title}" class="icon goback" onclick="Todoyu.Ext.calendar.Navi.goBackward()"></span>
			<span id="calendar-quicknav-today" title="{Label calendar.quicknav.today.title}" class="icon today" onclick="Todoyu.Ext.calendar.Navi.goToday()"></span>
			<span id="calendar-quicknav-forward" title="{Label calendar.quicknav.forward.title}" class="icon goforward" onclick="Todoyu.Ext.calendar.Navi.goForward()"></span>
		</span>
		<span class="rgt"><!-- right --></span>
	</h1>

	{* -------------- Calendar body --------------------- *}
	<div id="calendar-body">
		{if $showCalendar}
			{$content}
		{/if}
	</div>

</div>

<div id="calendar-edit" {if $active != 'edit'}style="display:none"{/if}>
{if $active == 'edit'}{$content}{/if}
</div>
<div id="calendar-view" {if $active != 'view'}style="display:none"{/if}>
{if $active == 'view'}
{$content}
<script>
Todoyu.Ext.calendar.setTime.bind(Todoyu.Ext.calendar).delay(1, {$date}, true);
</script>
{/if}
</div>