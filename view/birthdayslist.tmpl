{foreach $birthdays idUser userData}
<h3 class="birthdaysList {cycle values="odd,even"}" title="{Label event.eventtype.birthday} {$userData.firstname} {$userData.lastname} ({$userData.age} {Label calendar.yearsOld})">
	<span class="date">{dateFormat $userData.date D2Mshort}</span>
	<span class="name">{$userData.firstname} {$userData.lastname}</span>
	<span class="age">({$userData.age} {Label calendar.yearsOld})</span>
</h3>
{/foreach}