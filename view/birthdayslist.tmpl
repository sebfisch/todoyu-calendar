{foreach $birthdays idUser userData}
<h3 class="birthdaysList {cycle values="odd,even"}" title="{Label event.eventtypes.birthday} {$userData.firstname} {$userData.lastname} ({$userData.age} {Label calendar.yearsOld})">
	<span class="">{dateFormat $userData.tstamp_birthday D2M2Y4}</span>
	<span class="">{$userData.firstname} {$userData.lastname}</span>
	<span class="">({$userData.age} {Label calendar.yearsOld})</span>
</h3>
{/foreach}