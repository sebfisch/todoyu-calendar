<div class="mainGrid">
	<div id="gridcontainer" class="dayMode">
		<div id="topcontainerwk">
			{* ------------------------------------ Top container ------------------------------- *}
			<table class="wk-weektop"><tbody>
				<tr class="wk-daynames">
					<td rowspan="3" class="wk-tzlabel"></td>
					<th scope="col"><br /></th>
					<th class="wid4" rowspan="3"></th>
				</tr><tr>
					<td class="wk-allday">
						<div id="dayViewAllDaywk">
							{if count($holidays[$dateKey]) > 0}
								<span id="holiday-{$timestamp}" class="holiday quickInfoHoliday">
									{$holidays[$dateKey].0.title}
								</span>
							{/if}
							{if $personBirthdays[$dateKey]}
								{foreach $personBirthdays[$dateKey] birthday}
									{$birthday}
								{/foreach}
							{/if}
							{foreach $dayEvents.$dateKey dayEvent}
								{$dayEvent}
							{/foreach}
						</div>
					</td>
				</tr>
				<tr class="wk-webcontent"><td class="wk-webcontent-td"></td></tr>
			</tbody></table>
		</div>
		{* ---------------------------------------- Hours of day -------------------------------- *}
		<div id="calendarBody" class="wk-scrolltimedevents {if $fullDayView}full{/if} contextmenucalendarbody">
			<table class="tg-timedevents" id="tgTable"><tbody>
				<tr>
					<td class="wid40"></td>
					<td>
						<div class="tg-hourmarkerwrapper">
							<div class="tg-hourmarkers">
							{for markercounter 0 23}
								<div class="tg-dualmarker"></div>
							{/for}
							</div>
						</div>
					</td>
				</tr><tr>
					{* ---------------- Textual hour (00:00 to 23:00) -------------------------- *}
					<td class="colHours">
						{assign var=hourTimestamp value=$timestamp}
						{for hourcounter 0 23}
							{if $hourcounter == 8}
								<div id="dayStart"></div>
							{/if}
							<div title="{dateFormat $timestamp DlongD2MlongY4} - {if $hourcounter < 10}0{/if}{$hourcounter}:00" id="createEventAt-{$hourTimestamp}" class="tg-time-day">
								{if $hourcounter < 10}0{/if}{$hourcounter}:00
							</div>
							{assign var=hourTimestamp value=$hourTimestamp+3600}
						{/for}
					</td>
					<td class="dayCol dayview{if date('d.m.y', $tstamp) == date('d.m.y', time())}today{/if}">
						{* ------------ Hour contents (events and related info-tooltips) -------- *}
						<div id="tgCol0" class="tg-colwrapper">
						{foreach $events event}
							{$event}
						{/foreach}
						</div>
					</td>
				</tr>
			</tbody></table>
		</div>
	</div>
</div>

<script language="javascript">
	Todoyu.Ext.calendar.setTitle('{$title}');
	Todoyu.Config.Calendar = {
    	excerptTimeStart:	{$excerpttime_start},
    	excerptTimeEnd:		{$excerpttime_end}
	};
</script>