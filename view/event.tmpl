<div id="event-{$id}" class="event contextmenuevent quickInfoEvent {if $eventtype=='birthday'}birthdays{/if}{if $calendarMode=='month'} monthevent {/if} enumColBGFade{$color.id}"
	style="{if $calendarMode!='month'}top:{$top}px; left:{$left}px;{/if}
	{if $calendarMode=='week'} height:{$height}px;{/if}{if intval($width)>0} width:{$width}px;{/if}">
	<dl style="{if $calendarMode != 'month'}height:{$height}px;{/if}">
		<dt class="{if $calendarMode != 'month'}enumColBG{$color.id}{/if}">
			<span class="{if $calendarMode == 'month'}montheventTime{else}time{/if}">
				{$title}
				{if count($assignedPersons)==1}
					{$assignedPersons.0.shortname}
				{/if}
			</span>
		</dt>
		<dd><span class="{if $calendarMode=='week'}ca-elp{/if}" style="{if $calendarMode != 'month'}color:{$color.text|default:"#000"};{/if}">

{* ---------- Only show title if event is not private ---------- *}
{if $is_private == 1}
	<span class="privateEvent"></span>
	{if isPersonID($id_person)}
		{$title}
	{/if}
{else}
	{$title}
{/if}
		</span></dd>
	</dl>
</div>